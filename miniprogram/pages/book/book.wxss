/* pages/book.wxss */
@import '../../assets/common.wxss';

.book-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #f5f5f5;
  overflow: hidden;
}
.book-container .button-box {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding:0 20rpx;
  height: 100rpx;
  background: #fff;
}

.book-container .button-box .input-box {
  flex:1;
  margin:0 10rpx;
  height: 60rpx;
  border-bottom:1px solid #ddd;
}
.book-container .container-box {
  flex: 1;
  overflow: hidden;
}