.run-container {
  width:100%;
  height:100%;
}
.cover-box {
  position: absolute;
  bottom:10px;
  left:50%;
  display: flex;
  justify-content: center;
  align-items: center;
  
}
.cover-box .cover-icon {
  width: 60px;
  height: 60px;
}
.run-box {
  margin-left:-30px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #0060F7;
}
.run-stop{
  margin-left:-30px;
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.run-box .cover-icon {
  width: 40px;
  height: 40px;
}
.run-over {
  margin-left:-100px;
  width: 60px;
  height: 60px;
}
.run-over  .cover-icon{
  width: 55px;
  height: 55px;
}
.run-play {
  margin-left:40px;
  width: 60px;
  height: 60px;
}
.list-box{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right:20px;
  top:20px;
}
