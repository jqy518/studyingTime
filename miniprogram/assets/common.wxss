.flex-scroll-box {
  height: 100%;
  width: 100%;
  background-color: #f5f5f5;
}
.flex-container {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-wrap: wrap;
}
.flex-item {
  width: 46%;
  margin:2%;
  height: 150px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: stretch;
  align-items: stretch;
  
}
.flex-item .map-container {
  flex:1;
  width: 100%;
}
.book-flex-item {
  height: 230px;
}
.flex-item .flex-image {
  height: 160px;
  width: 100%;
  display: flex;
  background-color: #aca8a8;
  justify-content: center;
}
.flex-item .flex-image image {
  height: 100%;
}
.flex-item .book-title {
  padding:5px;
  line-height: 20px;
}
.flex-item .author {
  padding:5px;
  text-align: right;
  font-size: 12px;
  color:#666;
}
.flex-item .date-text {
  font-size: 16px;
  line-height: 30px;
  color:#333;
  padding:5px;
}